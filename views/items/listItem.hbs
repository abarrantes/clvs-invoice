
<h3>
<a href="/items/create">CREATE NEW ITEM</a>
</h3>

<div class="row">

<div class="col-md-3"></div>
<div class="col-md-2">Code</div>
<div class="col-md-2">Name</div>
<div class="col-md-2">Active</div>
<div class="col-md-3"></div>

</div>

{{#each items}}
<hr>
<div class="row">
    <hr>
<div class="col-md-3"></div>
<div class="col-md-2 itemCode">{{this.itemCode}}</div>
<div class="col-md-2 itemName">{{this.itemName}}</div>
<div class="col-md-2">
    {{#if this.active}}
    <button class="btn btn-danger btn-sm deactivateItem">Deactivate</button>
    {{else}}
    <button class="btn btn-success btn-sm activateItem">Activate</button>
    {{/if}}
</div>
<div class="col-md-3"></div>
<hr>
</div>
{{/each}}
