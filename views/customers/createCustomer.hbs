<div class="row createCustomer-row">
<div class="col-md-4"></div>
<div class="col-md-4 createCustomer-form">

<form action="/customers/create" method="POST">
{{#if message}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{message}} 
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/if}} 
<h3>Create a new customer</h3>
<br>
  <div class="form-group">
    <label for="cardCode">Code</label>
    <input type="text" class="form-control" id="cardCode" name="cardCode" placeholder="Enter customer code">
  </div>
  <div class="form-group">
    <label for="cardName">Name</label>
    <input type="text" class="form-control" id="cardName" name="cardName" placeholder="Enter customer name">
  </div>
    <br>
  <button type="submit" class="btn btn-primary">Create</button>

</form>
</div>

<div class="col-md-4"></div>

</div>